<domain type='{{domain_type}}' xmlns:qemu='http://libvirt.org/schemas/domain/qemu/1.0'>
    <name>{{ name }}</name>
    <title>slim</title>
    <os>
        <type>hvm</type>
        <kernel>{{ kernel }}</kernel>
        <initrd>{{ initrd }}</initrd>
        <cmdline>append modules=loop,squashfs,sd-mod,usb-storage mitigations=off quiet console=tty0 console=ttyS0,115200</cmdline>
        <boot dev='hd'/>
    </os>
    <cpu mode='host-model' check='partial'>
        <model fallback='allow'/>
    </cpu>
    <vcpu>{{ cpus }}</vcpu>
    <memory unit='MiB'>{{ mem }}</memory>
    <on_poweroff>destroy</on_poweroff>
    <on_reboot>restart</on_reboot>
    <on_crash>destroy</on_crash>
    <devices>
        <serial type='pty'>
            <target type='isa-serial' port='0'>
                <model name='isa-serial'/>
            </target>
        </serial>
        <console type='pty'>
            <target type='serial' port='0'/>
        </console>
        {{ #syncs }}
        <!-- use 'squash' mode to get around permission issues -->
        <filesystem type='mount' accessmode='squash'>
            <driver type='path' wrpolicy='immediate' />
            <source dir='{{ host }}' />
            <!-- target should specify a label used in a mount command, rather than a directory -->
            <target dir='{{ label }}' />
        </filesystem>
        {{ /syncs }}
    </devices>
    <qemu:commandline>
        <!-- forward ssh -->
        <qemu:arg value='-netdev' />
        <qemu:arg value='user,id={{eth_interface}},hostfwd=tcp::{{ ssh_port }}-:22'/>
        <qemu:arg value='-device'/>
        <qemu:arg value='virtio-net,netdev={{eth_interface}}'/>
    </qemu:commandline>
</domain>
